{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "moduleResolution": "node",
    "outDir": "./build",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine",
      "karma"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "files": [
    "./src/app/**/*.ts",
    "./main.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}